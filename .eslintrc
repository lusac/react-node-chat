{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "indent": [2, 2, {
        "SwitchCase": 1
    }]
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}